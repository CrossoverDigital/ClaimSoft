@using CD.ClaimSoft.Common.Helpers
<!-- START Sidebar (left)-->
<div class="aside-inner">
    <nav class="sidebar" data-sidebar-anyclick-close="">
        <!-- START sidebar nav-->
        <ul class="nav">
            <!-- START user info-->
            <li class="has-user-block">
                <div id="user-block" class="collapse">
                    <div class="item user-block">
                        <!-- User picture-->
                        <div class="user-block-picture">
                            <div class="user-block-status">
                                <img src="~/Content/Images/user/02.jpg" alt="Avatar" width="60" height="60" class="img-thumbnail img-circle" />
                                <div class="circle circle-success circle-lg"></div>
                            </div>
                        </div>
                        <!-- Name and Job-->
                        <div class="user-block-info">
                            <span class="user-block-name">Hello, Mike</span>
                            <span class="user-block-role">Designer</span>
                        </div>
                    </div>
                </div>
            </li>
            <!-- END user info-->
            <!-- Iterates over all sidebar items-->
            <li class="nav-heading">
                <span>Main Navigation</span>
            </li>
            <li class="@Html.IsActive(controller: "Dashboard")">
                <a href="@Url.Action("Index", "Dashboard", new { Area = "Dashboard" })" title="HOME">
                    <i class="fa fa-home" aria-hidden="true"></i>
                    <span data-localize="sidebar.nav.HOME">HOME</span>
                </a>
            </li>

            <li class="@Html.IsActive(controller: "Patient")">
                <a href="@Url.Action("Index", "Patient", new { Area = "Patient" })" title="PATIENTS">
                    <i class="fa fa-heartbeat" aria-hidden="true"></i>
                    <span data-localize="sidebar.nav.PATIENTS">PATIENTS</span>
                </a>
            </li>
        
            <li class="@Html.IsActive(controller: "Claim")">
                <a href="@Url.Action("Index", "Claim", new { Area = "Claim" })" title="CLAIMS">
                    <i class="fa fa-clipboard" aria-hidden="true"></i>
                    <span data-localize="sidebar.nav.CLAIMS">CLAIMS</span>
                </a>
            </li>

            <li class="@Html.IsActive(controller: "Payment")">
                <a href="#payment" title="PAYMENTS" data-toggle="collapse">
                    <i class="fa fa-usd" aria-hidden="true"></i>
                    <span data-localize="sidebar.nav.payment.PAYMENTS">PAYMENTS</span>
                </a>
                <ul id="payment" class="nav sidebar-subnav collapse">
                    <li class="@Html.IsActive("Payment", "PaymentsIndex")">
                        <a href="@Url.Action("PaymentsIndex", "Payment", new { Area = "Payment" })" title="PAYMENTS">
                            <span data-localize="sidebar.nav.payment.PAYMENTS">PAYMENTS</span>
                        </a>
                    </li>
                    <li class="@Html.IsActive("Payment", "BatchesIndex") ">
                        <a href="@Url.Action("BatchesIndex", "Payment", new { Area = "Payment" })" title="BATCHES">
                            <span data-localize="sidebar.nav.payment.BATCHES">BATCHES</span>
                        </a>
                    </li>
                </ul>
            </li>

            <li class="@Html.IsActive(controller: "ImportExport")">
                <a href="@Url.Action("Index", "ImportExport", new { Area = "ImportExport" })" title="IMPORT/EXPORT">
                    <i class="fa fa-exchange" aria-hidden="true"></i>
                    <span data-localize="sidebar.nav.EXPORT">IMPORT/EXPORT</span>
                </a>
            </li>


            <li class="@Html.IsActive(controller: "Report")">
                <a href="@Url.Action("Index", "Report", new { Area = "Report" })" title="REPORTS">
                    <i class="fa fa-line-chart" aria-hidden="true"></i>
                    <span data-localize="sidebar.nav.REPORTS">REPORTS</span>
                </a>
            </li>


            <li class="@Html.IsActive(controller: "Note")">
                <a href="@Url.Action("Index", "Note", new { Area = "Note" })" title="NOTES">
                    <i class="fa fa-comments-o" aria-hidden="true"></i>
                    <span data-localize="sidebar.nav.NOTES">NOTES</span>
                </a>
            </li>
            
            <li class="@Html.IsActive(controller: "Administration")">
                <a href="#administration" title="ADMINISTRATION" data-toggle="collapse">
                    <i class="fa fa-cogs" aria-hidden="true"></i>
                    <span data-localize="sidebar.nav.administration.ADMINISTRATION">ADMINISTRATION</span>
                </a>
                <ul id="administration" class="nav sidebar-subnav collapse">
                    <li class="@Html.IsActive("Payment", "PaymentsIndex")">
                        <a href="@Url.Action("Agency", "Administration", new { Area = "Administration" })" title="AGENCIES">
                            <span data-localize="sidebar.nav.administration.AGENCIES">AGENCIES</span>
                        </a>
                    </li>
                    <li class="@Html.IsActive("Payment", "BatchesIndex") ">
                        <a href="@Url.Action("Users", "Administration", new { Area = "Administration" })" title="USERS">
                            <span data-localize="sidebar.nav.administration.USERS">USERS</span>
                        </a>
                    </li>
                </ul>
            </li>



        </ul>
        <!-- END sidebar nav-->
    </nav>
</div>
<!-- END Sidebar (left)-->